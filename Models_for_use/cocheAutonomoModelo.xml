<mujoco>
  <option timestep="0.01" integrator="RK4"/>
  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="512"/>
    <texture name="plane" type="2d" builtin="checker" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" width="512" height="512" mark="edge" markrgb="0.8 0.8 0.8"/>
    <material name="plane" texture="plane" texrepeat="1 1" texuniform="true" reflectance="0.2"/>
    <material name="red" rgba="0.8 0 0 1"/>
    <material name="black" rgba="0 0 0 1"/>
  </asset>
  
  <worldbody>
    <!-- Piso -->
    <geom name="floor" type="plane" size="50 50 0.1" material="plane" friction="1 0.005 0.0001"/>

    <!-- Cuerpo del coche -->
    <body name="car" pos="0 0 0.1">
      <geom name="chassis" type="box" size="0.3 0.15 0.1" material="red" pos="0 0 0.1"/>

      <!-- Rueda frontal izquierda -->
      <body name="wheel_fl" pos="0.2 0.15 0">
        <joint name="joint_fl" type="hinge" axis="0 1 0" damping="0.1"/>
        <geom name="wheel_fl_geom" type="cylinder" size="0.05 0.02" material="black" friction="1 0.005 0.0001" euler="0 90 0"/>
      </body>

      <!-- Rueda frontal derecha -->
      <body name="wheel_fr" pos="0.2 -0.15 0">
        <joint name="joint_fr" type="hinge" axis="0 1 0" damping="0.1"/>
        <geom name="wheel_fr_geom" type="cylinder" size="0.05 0.02" material="black" friction="1 0.005 0.0001" euler="0 90 0"/>
      </body>

      <!-- Rueda trasera izquierda -->
      <body name="wheel_rl" pos="-0.2 0.15 0">
        <joint name="joint_rl" type="hinge" axis="0 1 0" damping="0.1"/>
        <geom name="wheel_rl_geom" type="cylinder" size="0.05 0.02" material="black" friction="1 0.005 0.0001" euler="0 90 0"/>
      </body>

      <!-- Rueda trasera derecha -->
      <body name="wheel_rr" pos="-0.2 -0.15 0">
        <joint name="joint_rr" type="hinge" axis="0 1 0" damping="0.1"/>
        <geom name="wheel_rr_geom" type="cylinder" size="0.05 0.02" material="black" friction="1 0.005 0.0001" euler="0 90 0"/>
      </body>
    </body>
    
    <!-- Objetivo (target) -->
    <site name="target" pos="-3 0 0.09" size="0.15 0.15 0.15" rgba="1 0 0 1" type="sphere"/>
  </worldbody>

  <actuator>
    <!-- Motores para las ruedas -->
    <motor joint="joint_fl" name="motor_fl" gear="150" ctrlrange="-1 1"/>
    <motor joint="joint_fr" name="motor_fr" gear="150" ctrlrange="-1 1"/>
    <motor joint="joint_rl" name="motor_rl" gear="150" ctrlrange="-1 1"/>
    <motor joint="joint_rr" name="motor_rr" gear="150" ctrlrange="-1 1"/>
  </actuator>
</mujoco>